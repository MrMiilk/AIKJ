<!--index.wxml-->
<view class="user-container bg-white">
    <view class="userinfo">
        <block wx:if="{{!hasLogin}}">
            <image class="userinfo-avatar" src="../../images/login1.png" background-size="cover" catchtap="doLogin">
            </image>
            <button open-type="getUserInfo" bindgetuserinfo="doLogin"> 登录 </button>
        </block>
        <block wx:else>
            <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </block>

    </view>
</view>

<!-- 未登录模态弹窗 -->
<!--mask-->
<view class="drawer_screen" bindtap="modalConfirm" data-statu="close" wx:if="{{modalShow}}"></view>
<!--content-->
<!--使用animation属性指定需要执行的动画-->
<view animation="{{animationData_2}}" class="drawer_box" wx:if="{{modalShow}}">
 
  <!--drawer content-->
  <view class="drawer_title">未登录</view>
  <view class="drawer_content">
    <view>请先登录</view>
  </view>
  <view class="btn_ok" bindtap="modalConfirm" data-statu="close">确定</view>
</view>


<view class="tab-container bg-white">
    <!-- 申请管理 -->
    <view class="tab-item border-bottom"  hover-class="tab-item-hover"catchtap="goApply">
        <view>
            <image src="../../images/manage.png" mode="aspectFit" class="tab-icon"></image>
            <text class="tab-text">申请</text>
        </view>
        
        <text class="tab-text" wx:if="{{hasLogin}}">{{numApply}}</text>
        <text class="tab-text" wx:else></text>
    </view>

    <!-- 公司 个人私钥 -->
    <view class="tab-item" hover-class="tab-item-hover" catchtap="applyInitiate" data-statu="open">
        <view>
            <image src="../../images/coin.png" mode="aspectFit" class="tab-icon"></image>
            <text class="tab-text">授权</text>
        </view>
    </view>
    <view class="tab-item border-bottom"  hover-class="tab-item-hover" catchtap="toComReg">
        <view>
            <image src="../../images/my.png" mode="aspectFit" class="tab-icon"></image>
            <text class="tab-text">注册</text>
        </view>
    </view>
    
</view>