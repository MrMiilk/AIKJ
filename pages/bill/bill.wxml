<view class='container-BILL'>
  <view class='tabbar-BILL'>
    <text id="tabitemVoice" class='tabitem {{activeTabId=="tabitemVoice"?"tabitem-active":""}}' bindtap='tabclick'>语音</text>
    <text id="tabitemForm" class='tabitem {{activeTabId=="tabitemForm"?"tabitem-active":""}}' bindtap='tabclick'>表单</text>
    <view class='tabindicator' animation="{{indicatorAnim}}"></view>
  </view>

  <swiper class='scrollview-content' current-item-id='{{activeTabId}}' bindchange='tabChange'>
    <swiper-item item-id="tabitemVoice">
      <scroll-view class="tab-content">
        <view class="section-body">
          <textarea class="message" auto-height value="{{currentText}}" placeholder="语音或手动输入记账,点击完成按钮自动识别" bindinput="vtextAreaBlur">
          </textarea>
        </view>
        <view class="send-SR">
          <image class="icon-SR-1" src="../../images/BILL/Send.png"  bindtap="sendData"></image>
        </view>
        <view class="view-SR-1">
          <view class="view-SR-2" catchtouchstart="streamRecord" catchtouchend="streamRecordEnd">
            <image class="icon-SR-2" src="../../images/BILL/microphone.png"></image>
          </view>
          <text class="text-SR-2" >按住说话</text>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item item-id="tabitemForm">
      <scroll-view scroll-y="true" class="tab-content">
        <view class="Form">
          <view class="list-BILL-1">
            <image class="icon-BILL-1" src="../../images/down-circle.png"></image>
            <text class="text-BILL-1">摘要:</text>
            <input class="weui-input_BILL_1" bindinput="summaryFunction" value="{{summary}}"/>
          </view>

          <view class="list-BILL-1">
            <image class="icon-BILL-1" src="../../images/down-circle.png"></image>
            <text class="text-BILL-1">借方科目:</text>
            <input class="weui-input_BILL_2" bindinput="debitFunction" value="{{debit}}"/>
          </view>


          <view class="list-BILL-1">
              <image class="icon-BILL-2" 
              src="../../images/BILL/YUAN.png"></image>
              <text class="text-BILL-1">借方金额(元):</text>
            <input class="weui-input_BILL_3" type="digit" value="{{debitAmount}}" bindinput = "debitAmFunction"/>
          </view>


          <view class="list-BILL-1">
            <image class="icon-BILL-1" src="../../images/down-circle.png"></image>
            <text class="text-BILL-1">贷方科目:</text>
            <input class="weui-input_BILL_2" bindinput="creditFunction" value="{{credit}}"/>
          </view>

          <view class="list-BILL-1">
              <image class="icon-BILL-2" 
              src="../../images/BILL/YUAN.png"></image>
              <text class="text-BILL-1">贷方金额(元):</text>
           
            <input class="weui-input_BILL_3" type="digit" value="{{creditAmount}}" bindinput = "creditAmFunction"/>
           
          </view>

          <view class="list-BILL-1">
            <image class="icon-BILL-3" src="../../images/down-circle.png"></image>
            <text class="text-BILL-1">日期:</text>
            <picker class="date-text" mode="date" value="{{date}}" bindchange="onDateChange">
              <view class='picker'>{{date}}
              </view>
            </picker>
          </view>

          <!--完成按钮-->
          <button class="button-BILL-1" hover-class="button-BILL-1-p"  bindtap="confirmData">完成</button>
        </view>
      </scroll-view>
    </swiper-item>
  </swiper>
</view>


