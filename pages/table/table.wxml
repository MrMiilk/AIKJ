<scroll-view class="table" scroll-x="true">
  <view class="tr bg-w">
    <view class="th">报表项目</view>
    <view class="th">金额(元)</view>
  </view>
  <block wx:for="{{incomeData}}">
    <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
      <view class="td">{{item.text}}</view>
      <view class="td">{{item.money}}</view>
    </view>
    <view class="tr" wx:else>
      <view class="td">{{item.text}}</view>
      <view class="td">{{item.money}}</view>
    </view>
  </block>
</scroll-view>
