

    <scroll-view scroll-y="true" class="tab-content recharge-list">
        <view class="container">
          <view wx:for="{{grantorUnautho}}">
            <view class="client_info_deal">
              <image src="../../images/apply_list/author.png" class="userinfo-avatar" background-size="cover"></image>
              <view class="name">{{item.user}}</view>
              <view class="btn_accept" hover="true" hover-class="btn_accept_hover" bindtap='toDetail' id="{{index}}" data-tp="1">待授权</view>
            </view>
          </view>
          <view wx:for="{{grantorAutho}}">
            <view class="client_info_undeal">
              <image src="../../images/apply_list/author.png" class="userinfo-avatar" background-size="cover"></image>
              <view class="name">{{item.user}}</view>
              <view class="btn_accept">已授权</view>
              <image src="../../images/apply_list/arrow.png" class="userinfo-avatar" background-size="cover" bindtap='toDetail' id="{{index}}" data-tp="2"></image>
            </view>
          </view>
          <view wx:for="{{grantorUnauthoRefuse}}">
            <view class="client_info_Refuse">
              <image src="../../images/apply_list/author.png" class="userinfo-avatar" background-size="cover"></image>
              <view class="name">{{item.user}}</view>
              <view class="btn_accept_r">已拒绝</view>
              <image src="../../images/apply_list/arrow.png" class="userinfo-avatar" background-size="cover" bindtap='toDetail' id="{{index}}" data-tp="3"></image>
            </view>
          </view>
        </view>
    </scroll-view>
