<!--pages/apply_list_1/apply_list.wxml-->
    <scroll-view scroll-y="true" class="tab-content recharge-list">
      <view class="container">
         <view class="client_info_deal" bindtap='goApply'> 添加新的申请</view>
        <view wx:for="{{granteeUnautho}}">
          <view class="client_info_deal">
            <image src="../../images/apply_list/author.png" class="userinfo-avatar" background-size="cover"></image>
            <view class="name">{{item.user}}</view>
            <view class="btn_accept" hover="true" hover-class="btn_accept_hover" bindtap='toDetail' id="{{index}}" data-tp="4">待接受</view>
          </view>
        </view>
        <view wx:for="{{granteeAutho}}">
          <view class="client_info_undeal">
            <image src="../../images/apply_list/author.png" class="userinfo-avatar" background-size="cover"></image>
            <view class="name">{{item.user}}</view>
            <view class="btn_accept">已接受</view>
            <image src="../../images/apply_list/arrow.png" class="userinfo-avatar" background-size="cover" bindtap='toDetail' id="{{index}}" data-tp="5"></image>
          </view>
        </view>
        <view wx:for="{{granteeUnauthoRefuse}}">
          <view class="client_info_Refuse">
            <image src="../../images/apply_list/author.png" class="userinfo-avatar" background-size="cover"></image>
            <view class="name">{{item.user}}</view>
            <view class="btn_accept">已拒绝</view>
            <image src="../../images/apply_list/arrow.png" class="userinfo-avatar" background-size="cover" bindtap='toDetail' id="{{index}}" data-tp="6"></image>
          </view>
        </view>
      </view>
    </scroll-view>
