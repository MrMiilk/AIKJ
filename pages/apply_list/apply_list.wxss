/* pages/apply_list_1/apply_list.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.navbar .item.active{
  color: #FFCC00;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #FFCC00;
}
.client_info{
  margin-top:10rpx;
  background-color: #fff;
  height: 130rpx;
  width:750rpx; 
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-top:5rpx; 
  border-radius: 50%;
}
.name{
  line-height: 130rpx;
}
.btn_accept{
  background-color: darkgray;
  height: 60rpx;
  width: 100rpx;
  border-radius: 5rpx;
  margin-left:400rpx;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  display: flex;
}

.btn_accept_hover{
  background-color: #fff;
  height: 60rpx;
  width: 100rpx;
  border-radius: 5rpx;
  margin-left:400rpx;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  display: flex;
}