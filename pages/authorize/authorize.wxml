<!--pages/query/query.wxml-->
<import src="../../template/query_t/query_t.wxml" />
<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="page-section">
        <view class="page-section-title">查询对象</view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="name" placeholder="{{companyName}}" disabled='{{disabled_name}}' />
        </view>
      </view>
      <!-- 账单类型 -->
      

      <!-- 时间范围 -->
      <view class="time_selection">
        <!-- 时间选择器 -->
        <view class="page-section-title">
          授权时间选择
        </view>
        <view class="time-choose">
          <!-- 开始时间 -->
          <picker mode="date" value="{{authStartTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='authStartTime'>
            <view class="picker">
              {{authStartTime}}
            </view>
          </picker>
          <!-- 结束时间 -->
          <picker mode="date" value="{{authEndTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='authEndTime'>
            <view class="picker">
              {{authEndTime}}
            </view>
          </picker>
        </view>
      </view>

      <view class="time_selection">
        <view class="page-section-title">
          可查询记录时间
        </view>
        <view class="time-choose">
          <!-- 开始时间 -->
          <picker mode="date" value="{{recordStartTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='recordStartTime'>
            <view class="picker">
              {{recordStartTime}}
            </view>
          </picker>
          <!-- 结束时间 -->
          <picker mode="date" value="{{recordEndTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='recordEndTime'>
            <view class="picker">
              {{recordEndTime}}
            </view>
          </picker>
        </view>
      </view>
    </form>
  </view>
  <button class="button-BILL-1" hover-class="button-BILL-1-p" bindtap="submitForm" data-type="agree">完成</button>
   <button class="button-BILL-1" hover-class="button-BILL-1-p" bindtap="submitForm" data-type="refuse">拒绝申请</button>
</view>
