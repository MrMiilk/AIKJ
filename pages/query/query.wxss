/* pages/query/query.wxss */
@import "../../common/weui.wxss";

.container {
  padding: 100rpx 0;
}

label {
  display: inline-block;
  min-width: 270rpx;
  margin-right: 20rpx;
}
form{
  width: 100%;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.picker{
  height: 70rpx;
  background-color: #FFFFFF;
  border: 1rpx solid cornflowerblue;
  margin: 10rpx;
  border-radius:15rpx;
  width:250rpx;
  margin-left:50rpx;

}
.page-section-title{
  position: relative;
}
.time_selection{
  margin-bottom: 40rpx;
  display: flex;
  flex-wrap:nowrap;
  flex-direction: row;
}
.time-choose {
  display: flex;
  flex-direction: column;
}
.page-section{
  margin-bottom: 40rpx;
  display: flex;
  flex-wrap:nowrap;
  position: relative;
}
.btn-area{
width:50%;
margin-top:80rpx;
background-color:yellow;
color:grey;
border-radius:30rpx;
}
.btn-area::after{
  border:0;
}
.bt-area-hover{
width:50%;
margin-top:80rpx;
background-color: #f7f7f7;
color:grey;
border-radius:30rpx;
}
.billType{
  background-color: white;
  border:solid 1rpx blue; 
  height:45rpx;
  width:90rpx;
  border-radius: 30rpx;
  align-items: center;
  vertical-align: center;
  justify-content: center;
  display: flex;
  margin-left:10rpx;
  margin-top:10rpx;
}
.text_type{
font-size: 30rpx;
color: black;
}
.x_po{
color:dark;
font-size:25rpx;
position:relative;
left:20rpx;
bottom:40rpx;

}


/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
}
 
.drawer_title{
  padding:15px;
  font: 20px "microsoft yahei";
  text-align: center;
}
.drawer_content {
  height: 210px;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
}
.btn_ok{
  padding: 10px;
  font: 20px "microsoft yahei";
  text-align: center;
  border-top: 1px solid #E8E8EA;
  color: #3CC51F;
}
.sele_bill{
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  height: 60rpx;
}
.us{
  height: 200rpx;
  width:500rpx;
  display: flex;
  flex-direction: row;
  flex-wrap:wrap;
  padding-left:50rpx
}
.page-body{
display:flex;
flex-direction:column;
width:100%;
height:100%;
padding-left: 70rpx;
}
button[type=primary] {
color:#FFFFFF;
background-color:rgb(170, 173, 25);
margin-top:100rpx; 
}