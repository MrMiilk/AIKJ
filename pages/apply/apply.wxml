<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <view class="page-section">
        <view class="page-section-title">公司名称</view>
        <view class="weui-cell__bd">
          <input class="weui-input" name="name" value="{{companyName}}" bindinput="inputComName" />
        </view>
      </view>
      <view class="time_selection">
        <view class="page-section-title">查询有效期</view>
        <view class="time-choose">
          <!-- 开始时间 -->
          <picker mode="date" value="{{authStartTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='authStartTime'>
            <view class="newP">
              <view class="name">起 :</view>
              <view class="picker">{{authStartTime}}</view>
            </view>
          </picker>
          <!-- 结束时间 -->
          <picker mode="date" value="{{authEndTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='authEndTime'>
            <view class="newP">
              <view class="name">止 :</view>
              <view class="picker">{{authEndTime}}</view>
            </view>
          </picker>
        </view>
      </view>
      <view class="time_selection">
        <!-- 时间选择器 -->
        <view class="page-section-title">账本日期</view>
        <view class="time-choose">
          <!-- 开始时间 -->
          <picker mode="date" value="{{recordStartTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='recordStartTime'>
            <view class="newP">
              <view class="name">起 :</view>
              <view class="picker">{{recordStartTime}}</view>
            </view>
          </picker>
          <!-- 结束时间 -->
          <picker mode="date" value="{{recordEndTime}}" start="{{begin}}" end="{{end}}" bindchange="bindDateChange" id='recordEndTime'>
            <view class="newP">
              <view class="name">止 :</view>
              <view class="picker">{{recordEndTime}}</view>
            </view>
          </picker>
        </view>
      </view>
    </form>
  </view>
  <button class="button-BILL-1" hover-class="button-BILL-1-p" bindtap="formSubmit">提交申请</button>
</view>