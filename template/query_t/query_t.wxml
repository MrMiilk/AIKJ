<!--pages/query/query.wxml-->
<template name="query_t">
<view class="container">
  <view class="page-body">
    <form catchsubmit="formSubmit" catchreset="formReset">
      <!-- 查询目标 -->
      <view class="page-section">
        <view class="page-section-title">查询对象</view>
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell weui-cell_input">
            <view class="weui-cell__bd">
              <input class="weui-input" name="name" placeholder="" disabled='{{item.disabled_name}}'/>
            </view>
          </view>
        </view>
      </view>
      <!-- 账单类型 -->
      <view class="page-section page-section-gap">
      <view class="page-section-title">账单类型</view>
        <!-- TODO:账单类型的下拉列表 -->
      </view>

      <!-- 时间范围 -->
      <view class="page-section page-section-gap">
        <view class="page-section-title">时间范围</view>
        <!-- 时间选择器 -->
        <!-- 开始时间 -->
        <view class="section">
          <picker mode="date" value="{{item.start_date}}" start="{{item.begin}}" end="{{item.end}}" bindchange="bindDateChange" id='start_date'>
              <view class="picker">
                {{item.start_date}}
              </view>
          </picker>
        </view>
        <!-- 结束时间 -->
        <view class="section">
          <picker mode="date" value="{{item.start_date}}" start="{{item.begin}}" end="{{item.end}}" bindchange="bindDateChange" id='end_date'>
              <view class="picker">
                {{item.end_date}}
              </view>
          </picker>
        </view>
      </view>
      <view class="btn-area">
        <button type="primary" formType="submit">Submit</button>
      </view>
    </form>
  </view>
</view>
</template>